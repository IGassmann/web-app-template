{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "preserve",
    "verbatimModuleSyntax": true,
    "jsx": "preserve",
    "noEmit": true,
    "incremental": true,
    "paths": { "@/*": ["./src/*"] },
    "plugins": [{ "name": "next" }]
  },
  "include": [
    "./src/**/*",
    "./next-env.d.ts",
    "./next.config.js",
    "./sentry.client.config.ts",
    "./sentry.edge.config.ts",
    "./sentry.server.config.ts",
    "./tailwind.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["./node_modules"]
}
