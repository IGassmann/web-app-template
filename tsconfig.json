{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "module": "preserve",
    "target": "es2023",
    "verbatimModuleSyntax": true,
    "jsx": "react-jsx",
    "noEmit": true,
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "./next-env.d.ts",
    "./next.config.ts",
    "./sentry.client.config.ts",
    "./sentry.edge.config.ts",
    "./sentry.server.config.ts",
    "./tailwind.config.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["./node_modules"]
}
